<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.logInSignUp.SignUpActivity"
    android:padding="20dp">

    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"

        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/treeicon" />

    <TextView
        android:id="@+id/loginTextView"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@+id/iconImageView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:text="Sign Up"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linerLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/loginTextView"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Login.EditText.CircularCorner.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center_horizontal"
            android:hint="Phone"
            app:hintTextColor="@color/black"
            app:startIconDrawable="@drawable/phoneblack_icon">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/newPhoneEditTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Login.EditText.CircularCorner.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:hint="Full Name"
            app:hintTextColor="@color/black"
            app:startIconDrawable="@drawable/face_icon">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/fullNameEditTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Login.EditText.CircularCorner.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:hint="Email"
            app:hintTextColor="@color/black"
            app:startIconDrawable="@drawable/email_icon">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailIdEditTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/black" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/linerLayout1"
        app:layout_constraintBottom_toTopOf="@+id/bottomLoginRedirect">

        <LinearLayout
            android:id="@+id/linerLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/linerLayout1"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            >

            <CheckBox
                android:id="@+id/termsAndConditionCheckBox"
                android:layout_width="20dp"
                android:layout_height="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="I accept the "
                />

            <TextView
                android:id="@+id/termsAndConditionBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="terms &amp; conditions"
                android:textStyle="bold"
                android:textColor="@color/green"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linerLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/linerLayout4"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:gravity="start">

            <CheckBox
                android:id="@+id/privacyAndPolicyCheckBox"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="I accept the"/>

            <TextView
                android:id="@+id/privacyAndPolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" privacy policy"

                android:textStyle="bold"
                android:textColor="@color/green"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="@+id/bottomLoginRedirect"
            app:layout_constraintTop_toBottomOf="@+id/linerLayout5"
            android:layout_centerHorizontal="true"
            >

            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/logInBtn"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/button_design"
                android:backgroundTint="@color/green"
                android:gravity="center"
                android:text="Continue"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </FrameLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottomLoginRedirect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have account?"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/btnSignIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Log In"
            android:textColor="@color/green"
            android:textStyle="bold" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>