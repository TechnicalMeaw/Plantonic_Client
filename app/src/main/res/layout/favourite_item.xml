<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardMaxElevation="2dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/productImage"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:src="@drawable/face_icon"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                tools:srcCompat="@tools:sample/backgrounds/scenic"
                 />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="15dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:layout_marginEnd="7dp">

                <TextView
                    android:id="@+id/productName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Name"

                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/favProductOffer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textFontWeight="@integer/material_motion_duration_medium_1"

                        android:gravity="bottom"
                        android:text="25% off"
                        android:textColor="@color/green"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/actualPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginStart="10dp"
                        android:textFontWeight="@integer/material_motion_duration_medium_1"

                        android:text="$ 200"
                        android:background="@drawable/striking_text"/>

                    <TextView
                        android:id="@+id/productPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$ 100"
                        android:textFontWeight="@integer/material_motion_duration_medium_1"

                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"

                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/moveToCartBtn"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_design"
                        android:backgroundTint="@color/green"
                        android:gravity="center"
                        android:text="Loading"
                        android:layout_marginRight="5dp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                         />

                    <TextView
                        android:id="@+id/removeBtn"
                        style="@style/TextAppearance.Material3.BodyLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_design"
                        android:backgroundTint="#CDDC4444"
                        android:gravity="center"
                        android:text="Remove"
                        android:layout_marginLeft="5dp"
                        android:layout_marginEnd="5dp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                         />

                </LinearLayout>

                <TextView
                    android:id="@+id/alreadyInCartTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The item is already in cart"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    />

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>